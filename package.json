{
  "name": "niconizer",
  "description": "Desktop application that overlay comments on the screen directly.",
  "version": "0.0.0-development",
  "bin": {
    "niconizer": "dist/bin/index.js"
  },
  "bugs": {
    "url": "https://github.com/matzkoh/niconizer/issues"
  },
  "dependencies": {
    "electron": "4.0.5",
    "pkg-up": "2.0.0",
    "ws": "6.1.4"
  },
  "devDependencies": {
    "@types/pkg-up": "2.0.0",
    "@types/ws": "6.0.1",
    "electron-packager": "13.0.1",
    "npm-run-all": "4.1.5",
    "parcel": "1.11.0",
    "parcel-plugin-shebang": "1.2.3",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "sass": "1.17.0",
    "semantic-release": "15.13.3",
    "stylelint": "9.10.1",
    "stylelint-config-recess-order": "2.0.1",
    "stylelint-config-strict-scss": "0.5.0",
    "typescript": "3.3.3"
  },
  "files": [
    "dist/app",
    "dist/bin"
  ],
  "homepage": "https://github.com/matzkoh/niconizer#readme",
  "keywords": [
    "chat",
    "comment",
    "desktop",
    "electron",
    "gadget",
    "nicovideo"
  ],
  "license": "MIT",
  "main": "dist/app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matzkoh/niconizer.git"
  },
  "scripts": {
    "clean:dist": "rimraf dist",
    "lint": "run-s lint:*",
    "lint:css": "stylelint content/**/*.scss content/**/*.css",
    "lint:format": "prettier -l {bin,content,lib,types}/**",
    "prebuild": "run-s lint clean:dist",
    "build": "run-p build:*",
    "build-base": "parcel build --no-source-maps --no-content-hash --public-url .",
    "build:lib": "npm run build-base -- -t electron lib/index.ts -d dist/app",
    "build:content": "npm run build-base -- -t browser content/index.html -d dist/app/content",
    "build:bin": "npm run build-base -- -t node bin/index.ts -d dist/bin",
    "build:script": "npm run build-base -- -t node script/* -d dist/script",
    "prepackage": "run-s build",
    "package": "run-p package:*",
    "package-base": "electron-packager . --overwrite --asar --ignore \"^/(?!dist(/app(/|$)|$)|node_modules(/|$)|package\\.json$)\" --out dist/package",
    "package:mac": "npm run package-base -- --platform darwin --arch x64",
    "package:win": "npm run package-base -- --platform win32 --arch ia32",
    "package:linux": "npm run package-base -- --platform linux --arch x64",
    "postpackage": "node dist/script/postpackage",
    "release": "semantic-release --no-ci",
    "prestart": "run-s build",
    "start": "electron .",
    "test": "run-s build"
  }
}
